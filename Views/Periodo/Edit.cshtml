@model ProjetoCardapio.Models.Periodo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Periodo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="NomePeriodo" class="control-label"></label>
                <input asp-for="NomePeriodo" class="form-control" />
                <span asp-validation-for="NomePeriodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
