@model ProjetoCardapio.Models.Pratos

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Pratos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PeriodoId" class="control-label"></label>
                <select asp-for="PeriodoId" class ="form-control" asp-items="ViewBag.PeriodoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DiasId" class="control-label"></label>
                <select asp-for="DiasId" class ="form-control" asp-items="ViewBag.DiasId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PratoNome" class="control-label"></label>
                <input asp-for="PratoNome" class="form-control" />
                <span asp-validation-for="PratoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkImagem" class="control-label"></label>
                <input asp-for="LinkImagem" class="form-control" />
                <span asp-validation-for="LinkImagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
