@model ProjetoCardapio.Models.Pratos

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Você tem certeza que deseja deletar esse Prato?</h3>
<div>
    <h4>Pratos</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Periodo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Periodo.NomePeriodo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dias)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dias.NomeDia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PratoNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PratoNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LinkImagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LinkImagem)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-danger" asp-action="Index">Voltar</a>
    </form>
</div>
