@model ProjetoCardapio.Models.Presencas

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Você tem certeza que deseja deletar a Presença?</h3>   
<div>
    <h4>Presenças</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Salas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salas.id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeAlunos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeAlunos)
        </dd>
    </dl>
    
    <form asp-action="Deletar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <a class="btn btn-danger" asp-action="Index">Voltar</a>
    </form>
</div>
