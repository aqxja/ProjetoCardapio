@model ProjetoCardapio.Models.Dias

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Você tem certeza que deseja deletar esse Dia?</h3>
<div>
    <h4>Dias</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeDia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeDia)
