@model ProjetoCardapio.Models.Salas

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Salas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeSalas" class="control-label"></label>
                <input asp-for="NomeSalas" class="form-control" />
                <span asp-validation-for="NomeSalas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
